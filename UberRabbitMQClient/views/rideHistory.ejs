<html lang="en">
<head>
<meta charset="UTF-8">
<title>UBER</title>
<base href="/">

<!-- JS -->
<script src="libs/angular/angular.min.js"></script>
<script src="libs/angular-route/angular-route.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" />

<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="libs/bootstrap-rating-input.min.js" type="text/javascript"></script> 

<!-- ANGULAR CUSTOM -->
<script src="js/app.js"></script>
<script src="js/controllers/TripsController.js"></script>

<!-- STYLE SHEETS CUSTOM -->
<link rel="stylesheet" type="text/css" href="css/style.css" />
<link href='https://fonts.googleapis.com/css?family=Titillium+Web:300' rel='stylesheet' type='text/css'>

<script>
   $(function(){
   $('input').on('change', function(){
        alert("Changed: " + $(this).val())
    });
    });
</script>
    
</head>

<body ng-app = "uberApp" ng-controller="TripsController" ng-init="getdriverTripDetails();">
<div  >
  <!-- HEADING -->
  <header class="bgimage_1">
  <div class="container-fluid" >
  	<div class="row">
  	<div class="logoimage_1" style ="height: 70px; width : 70px" > <h4 style="padding-left:80px; color : #FFFFFF">Welcome to UBER </h4> </div>
  	</div>
  </div>
  </header>		
  </div>
	
	<div class="container-fluid">	
	<!-- BLANK -->
	<!-- SIDE MENU -->
	<div class="col-md-2" >
	<div >
  		
  		<div class="profile-sidebar_2">
  		
  		<!-- SIDEBAR MENU -->
  		
  		<div class="profile-userpic">
  			<img src="../images/default.jpeg" alt="">
  			<h5 align="center"><strong> {{email}} </strong></h5>
  		</div>
  		
  		<hr/>
  		
  		<div class="profile-usermenu">
  		<ul class="nav">
  		
  		<!-- MY RideRequests -->
  		<li><a href="/driverRides"> Ride Requests
  		</a></li>
  		
  		
  		<!-- MY Profile -->
  		<li><a href="/driverProfile#/myProfile"> My Profile
  		</a></li>
  		
  		<!-- Car Details -->
  		<li><a href="/driverProfile#/carDetails"> Car Details
  		</a></li>
  				
  		
  		<!-- Document Upload -->
  		<li><a href="/driverProfile#/uploadDocument"> Upload Document
  		</a></li>		
  		
  		
  		<!-- INTRO VIDEO -->
  		<li><a href="/driverProfile#/introVideo"> Introduction Video
  		</a></li>
  		
  		
  		<!-- RIDE HISTORY -->
  		<li><a href="/rideHistory"> Ride History
  		</a></li>
  		
  		
  		<!-- BILLING HISTORY -->
  		<li><a href="/driverProfile#/billHistory"> Billing History
  		</a></li>
  		
  		<!-- LOGOUT -->
  		<li><a href="/driverlogout"> Logout
  		</a></li>		
  	</ul>
  	</div>
  	</div>
  	</div>
	<!-- END MENU -->
	</div>
	
	
	<!-- PROFILE -->
	<div class="col-md-5">
		<div class="row">
			<h3 align = "center"> <strong>MY TRIPS </strong> </h3>
			<hr/>	
		</div>
		<div class="row">			
		   <table class="table table-hover">
			    <thead>
			      <tr>
			      	<th> </th>
			        <th>Pickup</th>
			        <th>Driver</th>
			        <th>Fare</th>
			        <th>Car</th>
			        <th>City</th>
			        <th>Payment Method</th>
			      </tr>
			    </thead>
			    		    
			    <tbody>
		  		   <tr ng-repeat-start="ride in alldriverTripslist">
		  		    	<td>
		  		        	<div ng-if="ride.expanded" ng-click="ride.expanded = false"><span class="glyphicon glyphicon-chevron-right"></span>&nbsp;</div>
		  		    		<div ng-if="!ride.expanded" ng-click="ride.expanded = true"><span class="glyphicon glyphicon-chevron-down"></span>&nbsp;</div>
		  		    	</td>
		  		    	<td>{{ride.START_TIME}}</td>
		  		    	<td>{{ride.DRIVER_ID}}</td>
		  		    	<td>{{ride.PRICE}}</td>
		  		      	<td> UBER X</td>
		  		      	<td>{{ride.city}}</td>
		  		      	<td>CREDIT CARD</td>
		  		    </tr>			          
		  		    			    
		 			<tr ng-if="ride.expanded" ng-repeat-end="" bgcolor="#F8F8F8 " style="margin:10px">
		  		    	<td colspan="2" style="padding: 20px"><div id="map" style="width: 350px; height: 350px; float: left;""></div> <!--<img src="../images/staticmap.png" style="border:1px solid;margin-top:5px;width:250px;height:250px;">--></td>
		  		    	<td  colspan="3" align="center"> 
		  		    		<h3><strong>{{ride.PRICE}}</strong> </h3>
		  		    		<small>CREDIT CARD<hr class ="marginClass"/>
		  		    		{{ride.START_TIME}} <hr class ="marginClass"/>
		  		    		{{ride.START_TIME}} <hr class ="marginClass"/>
		  		    		{{ride.END_TIME}}</small>
		  		    	</td>
		  		    	<td colspan="3"><p>My rating: <input type="number" name="your_awesome_parameter" id="some_id" value = {{ride.DRIVER_RATING}} class="rating" data-clearable="remove"/></p> </td>
					</tr>		  		    
			    </tbody>
			    
		 	</table>
		 	
		</div>	
	</div>
			
	<!-- BLANK -->
	<div class="col-md-3">
	</div>
	</div>

</body>
</html>