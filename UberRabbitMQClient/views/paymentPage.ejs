<html lang="en">
<head>
<meta charset="UTF-8">
<title>UBER</title>
<base href="/">

<!-- JS -->
<script src="libs/angular/angular.min.js"></script>
<script src="libs/angular-route/angular-route.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" />

<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="libs/bootstrap-rating-input.min.js" type="text/javascript"></script> 

<!-- ANGULAR CUSTOM -->
<script src="js/app.js"></script>
<script src="js/controllers/PaymentController.js"></script>

<!-- STYLE SHEETS CUSTOM -->
<link rel="stylesheet" type="text/css" href="css/style.css" />
<link href='https://fonts.googleapis.com/css?family=Titillium+Web:300' rel='stylesheet' type='text/css'>


    
</head>

<body ng-app = "uberApp" ng-controller="paymentCtrl" >

	<div>
	<!-- HEADING -->
	<header class="bgimage_1">
	<div class="container-fluid" >
		<div class="row">
			<h2 class="heading" >U B E R</h2>		
		</div>
	</div>
	</header>		
	</div>
	<div class="alert alert-success col-md-10" id="success-alert" style="display: none ">

                <center> <strong> Credit card added successfully! </strong></center>

    </div>
<div class="alert alert-success col-md-10" id="success-alert1" style="display: none ">

                <center> <strong> Credit card deleted successfully! </strong></center>

             </div>	
	<div class="container-fluid">
	<!-- BLANK -->
	<div class="col-md-1">
	</div>
	<!-- SIDE MENU -->
	<div class="col-md-2" >
		<div>			
			<div class="profile-sidebar_2">			
			<!-- SIDEBAR MENU -->			
			<div class="profile-userpic">
				<img src="../images/default.jpeg" alt="">
				<h5 align="center"> <%=firstname%>&nbsp<%=lastname%> </h5>
			</div>			
			<hr/>			
			<div class="profile-usermenu">
			<ul class="nav">			
			<!-- MY TRIPS -->
			<li><a href="/myTrips"> My Trips
			</a></li>
			
			<!-- VIEW MY PROFILE -->
			<li><a href="#"> Profile
			</a></li>
					
			<!-- PAYMENT -->
			<li><a href="#"> Payment
			</a></li>		
			
			
			<!-- FREE RIDES -->
			<li><a href="#"> Free Rides
			</a></li>
			
			
			<!-- LOGOUT -->
			<li><a href="#"> Logout
			</a></li>		
		</ul>
		</div>
		</div>
	</div>
	<!-- END MENU -->
	</div>
	
	<div class="col-md-1">
	</div>
	<!-- PROFILE -->
	<div class="col-md-6">
		<div class="row">
			<h3 align = "center"> <strong>PAYMENT </strong> </h3>
			<hr/>	
		
			<div class="col-xs-5"><h4 align="left"><strong>Payment Methods</strong></h4><a href="#Foo" data-toggle="collapse"></div>
			<div class ="col-xs-5"><span  class="pull-right glyphicon glyphicon glyphicon-plus"></span></a></div>
			
			
			
		</div>
		<div class="row">			
		   <table class="table table-hover">		    		    
			    <tbody>
		  		   <tr ng-repeat="payment in myPayments">
		  		    	
		  		    	<td> XXXX-XXXX-XXXX-{{payment.cardnumber_4}} &nbsp;&nbsp; {{payment.month}} /{{payment.year}} &nbsp;&nbsp;&nbsp; <button name="Delete" value="Delete" class="btn btn-info" ng-click="deleteCard(payment.cardnumber_4);">Delete</button>
		  		    	</td>
		  		    
		  		    </tr>	
		  		    </div>   		          
		      </tbody>
			    
		 	</table>
		 	<div id="Foo" class="collapse">
		 	<table>
		 	<tr>
<td><input type="text" class="form-control input-sm"name="cardnum" placeholder="xxxx xxxx xxxx xxxx" ng-model="creditcard" required></td>
<td>
			
			<select aria-label="Month" name="month" ng-model="month" required>
			<option value="" selected="">Month</option>
			<option value="1">01</option>
			<option value="2">02</option>
			<option value="3">03</option>
			<option value="4">04</option>
			<option value="5">05</option>
			<option value="6">06</option>
			<option value="7">07</option>
			<option value="8">08</option>
			<option value="9">09</option>
			<option value="10">10</option>
			<option value="11">11</option>
			<option value="12">12</option>
			</select>
			<select aria-label="Year" name="year" ng-model="year" required>
			<option value="" selected="">Year</option>
			<option value="2015">2015</option><option value="2016">2016</option><option value="2017">2017</option><option value="2018">2018</option><option value="2019">2019</option><option value="2020">2020</option>
			<option value="2021">2021</option><option value="2022">2022</option><option value="2023">2023</option><option value="2024">2024</option><option value="2025">2025</option>
			</select>			
			</td>
	
<td><input type="text" class="form-control input-sm" name="cvv" placeholder="CVV" ng-model = "cvv" required></td>
<td><input class="form-control input" type="text" id="cardholder" name="cardholder" placeholder="CARD HOLDER NAME" ng-model="cardholder" required /></td>
<!--<td><input type="submit" class="btn btn-link" value="Cancel"></td>-->
<td><input type="submit" class="btn btn-info" value="Save" ng-click ="saveNewCard();"></td>
</tr>
</table>
</div>	 
		 	<hr/>
		 	<div class="row">
				<h4 align = "left"> <strong>Promotions </strong> </h4>
			</div> 	
		<hr/>
		<div class="row">
			<h6 align = "center"> <strong>NO ACTIVE PROMOTIONS </strong> </h6>
				
		</div> 	
		<hr/>
		<div class="row">
			<h4 align = "LEFT"> <strong>Gratuity for TAXI</strong> </h4>
			<h5>Your preferred gratuity will be applied to any future TAXI trips that you request through Uber. This will apply to TAXI fares only and be paid to your driver. Gratuity only applies in certain countries.</h5>
				
		</div> 
			    
			    
		 	
		</div>	
	</div>
			
	<!-- BLANK -->
	<div class="col-md-2">
	</div>
	</div>

</body>
</html>