<html lang="en">
   <head>
      <meta charset="UTF-8">
      <title>UBER</title>
      <base href="/">
      <script src="libs/angular/angular.min.js"></script>
      <script src="libs/angular-route/angular-route.min.js"></script>
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
      <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
      <link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" />
      <!-- ANGULAR CUSTOM -->
      <script src="js/controllers/adminController.js"></script>
      <!-- STYLE SHEETS CUSTOM -->
      <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
      <link rel="stylesheet" type="text/css" href="css/style.css" />
      <link href='https://fonts.googleapis.com/css?family=Titillium+Web:300' rel='stylesheet' type='text/css'>
   </head>
   <body ng-app ="uberApp" ng-controller ="AdminController">
      <div>
         <!-- HEADING -->
         <header class="bgimage_1">
            <div class="container-fluid">
               <div class="row">
                  <h2 class="heading">U B E R</h2>
               </div>
            </div>
         </header>
      </div>
      <br/>
      <div>         
         <header >
            <div class="container-fluid" align="center">
               <button class="btn btn-warning" ng-click="getAdminDashboardPage();">Home Page</button>              
               <a class="btn btn-info" href="/logout">Logout  <%= firstname %> &nbsp <%= lastname%></a>
            </div>
         </header>
      </div>
      <div class="col-md-3"></div>        
         </div>
      <div class="container-fluid">
         <!-- BLANK -->
         
         <!-- PROFILE -->
         <div class="col-md-6" align="center">
            <div class="row">
               <br/><br/>
               <h1 align = "center"> <strong>ADMIN DASHBOARD</strong> </h1><hr/>
            </div>                       
            <div class="row">
               <h3 align = "center"> <strong>DRIVER SETTINGS</strong> </h3>
               <div align="center">     
               		<button class="btn btn-primary" ng-click="getAllRidersPage();">List all drivers</button>
               		<button class="btn btn-success" ng-click="approveAllDrivers();">Approve all drivers</button>              		               		              
               </div>
            </div>
            <hr/>
            <div class="row">
               <h3 align = "center"> <strong>RIDER SETTINGS</strong> </h3>
               <div align="center">     
               		<button class="btn btn-primary" ng-click="getAllRidersPage();">List All Riders</button>              		               		              
               </div>
            </div>
            <hr/>
            <div class="row">
               <h3 align = "center"> <strong>BILLS SETTINGS</strong> </h3>
            </div>
            <hr/>
            <div class="row">
               <h3 align = "center"> <strong>RIDES SETTINGS</strong> </h3>
            </div>
            <hr/>
            <div class="row">
               <h3 align = "center"> <strong>STATISTICS</strong> </h3>
            </div>
         </div>
         <!-- BLANK -->
         <div class="col-md-2"></div>
      </div>
   </body>
</html>